<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">Add New Word</h2>
            </div>
            <div class="card-body">
                <form action="/vocabulary" method="POST">
                    <div class="mb-3">
                        <label for="word" class="form-label">Word</label>
                        <input type="text" class="form-control" id="word" name="word" required
                            value="<%= vocabulary ? vocabulary.word : '' %>">
                    </div>

                    <div class="mb-3">
                        <label for="translation" class="form-label">Translation</label>
                        <input type="text" class="form-control" id="translation" name="translation" required
                            value="<%= vocabulary ? vocabulary.translation : '' %>">
                    </div>

                    <div class="mb-3">
                        <label for="language" class="form-label">Language</label>
                        <input type="text" class="form-control" id="language" name="language" required
                            value="<%= vocabulary ? vocabulary.language : '' %>">
                    </div>

                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <input type="text" class="form-control" id="category" name="category" required
                            value="<%= vocabulary ? vocabulary.category : '' %>">
                    </div>

                    <div class="mb-3">
                        <label for="exampleSentence" class="form-label">Example Sentence</label>
                        <textarea class="form-control" id="exampleSentence" name="exampleSentence" rows="2"
                            ><%= vocabulary ? vocabulary.exampleSentence : '' %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="culturalNote" class="form-label">Cultural Note</label>
                        <textarea class="form-control" id="culturalNote" name="culturalNote" rows="2"
                            ><%= vocabulary ? vocabulary.culturalNote : '' %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="difficulty" class="form-label">Difficulty Level</label>
                        <select class="form-select" id="difficulty" name="difficulty" required>
                            <option value="Beginner" <%= vocabulary && vocabulary.difficulty === 'Beginner' ? 'selected' : '' %>>Beginner</option>
                            <option value="Intermediate" <%= vocabulary && vocabulary.difficulty === 'Intermediate' ? 'selected' : '' %>>Intermediate</option>
                            <option value="Advanced" <%= vocabulary && vocabulary.difficulty === 'Advanced' ? 'selected' : '' %>>Advanced</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="pronunciation" class="form-label">Pronunciation Guide</label>
                        <input type="text" class="form-control" id="pronunciation" name="pronunciation"
                            value="<%= vocabulary ? vocabulary.pronunciation : '' %>">
                    </div>

                    <div class="mb-3">
                        <label for="memoryTip" class="form-label">Memory Tip</label>
                        <textarea class="form-control" id="memoryTip" name="memoryTip" rows="2"
                            ><%= vocabulary ? vocabulary.memoryTip : '' %></textarea>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Add Word</button>
                        <a href="/vocabulary" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 